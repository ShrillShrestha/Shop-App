<%- include('../includes/header.ejs') %>
<body>
    <%- include('../includes/navigation.ejs') %>
    <%if(prods.length > 0) {%>
        <div class="list-group container" id = "ct-lt">
            <%prods.forEach((product)=> {%>
                <div class = "cart-list list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <a href="/details/<%=product.id%>">
                            <h5><%=product.productId.title%></h5>
                        </a>
                        <small>Count: <%=product.quantity%></small>
                    </div>
                    <p class="mb-1 text"><%=product.productId.description%></p>
                    <small>Price: $<%=product.productId.price%> per each</small>
                    <form class="fm-btn float-right" action="/delete-cart-product/<%=product._id%>" method="POST">
                        <button class="card-link btn btn-primary" type="submit">Delete</button>
                    </form>
                </div>
            <%});%>
            <div class="d-flex justify-content-center top-spc">
                <form action="/create-order" method="POST">
                    <button type="submit" class="btn btn-primary">Order Now!</button>
                </form>
            </div>
        </div>
    <%}else{%>
        <div class="d-flex justify-content-center top-spc">
            <h1>Cart is Empty!</h1>
        </div>
    <%}%>
<%- include('../includes/footer.ejs') %>
